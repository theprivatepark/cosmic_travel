<% if @scientist.errors %>
  <ul>
    <% @scientist.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>


<%= form_for @scientist do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name%>
  <br>
  <%= f.label :field_of_study, "Field of Study" %>
  <%= f.text_field :field_of_study %>
  <br>
  <%= f.submit "New Scientist" %>

<% end %>